<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <%- include('includes/library') %>
    </head>
<body class="login_body">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 col-sm-8 col-xs-12">
                <div class="card_login_box">
                    
                        <div class="a">
                            <div class="login_title_login">
                                LOGIN  
                               <a href="/auth/google"> <img src="/images/google.png" class="google_icon" alt="" /></a>
                            </div>
                        </div>
                        <br>
                        <div class="login_description">
                            <p> Please enter your student email and password!</p>
                        </div>
                        <form action="" method="post">
                            <div>
                                <input class="form-control login_account_textbox" type="text" value="<%= email %>" name="email" id ="" placeholder="Email">
                            </div>
                            <div>
                                <input class="form-control login_password_textbox" type="password"  name="password" id ="" placeholder="Password">
                            </div>
                            <% if(error.length > 0) { %>
                                <div class="alert alert-danger" role="alert">
                                    <%= error %>
                                </div>
                            <% } %>
                                <div class="login_checkbox">
                                <input  type="checkbox" name="remember" id ="" placeholder="Check"> Remember me
                            </div>
                            <div>
                                <input class="btn btn-success login_button_login" type="submit" name="" id="" value="Login" href="#">
                            </div>
                        </form>
                        
                </div>
            </div>
        </div>
    </div>
</body>
</html>